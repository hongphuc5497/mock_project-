<div class="top_main_wrap">
  <div class="top_main_view">
	  <div class="">
      <div class="pankuzu_wrap bg">
        <div class="common_inner">
          <ul class="pankuzu_list">
						<%= render_breadcrumbs :tag => "li class='pankuzu_item'", :separator => ""%>
          </ul>
        </div>
      </div>
      
      <div class="blogdetail_wrap clearfix">
	      <section class="blogdetail_main">
					<div class="blogdetail_mv_pic" style="background: url(<%= image_url('common/sample_pic')%>) center center no-repeat;background-size: cover;">
					</div>

		      <div class="blogdetail_mv_block">
						<div class="blogdetail_info">
							<% @blog.categories.each do |category| %>
								<p class="tag">
									<%= category.name %>
								</p>
							<% end %>

							<p class="date"><%= @blog.blog_detail.updated_at %></p>
						</div>
						
						<h1 class="blogdetail_title">
							<%= @blog.blog_detail.title %>
						</h1>

						<p class="main_place">
							<%= image_tag("common/place_icon.png") %>

							<a href="">
								<%= @blog.location.province %>
							</a>
						</p>
		      </div>

					<div class="blogdetail_textarea">
						<%= @blog.blog_detail.content %>
					</div>

					<div class="blogdetail_keywords_wrap">
						<p class="blogdetail_common_title">
							Blog keywords
						</p>

						<ul class="tag_list">
							<% @blog.tags.each do |tag| %>
								<li>
									<a href="" class="tag">
										<%= tag.name %>
									</a>
								</li>
							<% end %>
						</ul>
					</div>

					<div class="blogdetail_recommend_wrap">
						<p class="blogdetail_common_title">
							Blogs common
						</p>
						
						<article class="blog_common_block clearfix detail">
						</article>

						<article class="blog_common_block clearfix detail">
						</article>
					</div>

					<div class="blogdetail_ex_wrap clearfix">
						<p class="blogdetail_common_title sp">
							Hot experiences in @blog.location.province_name 
						</p>

						<div class="blogdetail_ex_inner clearfix">
							<article class="ex_common_list">
								#@experience.location.province_name 
							</article>
						</div>
					</div>
	      </section>

	      <aside class="blogdetail_aside">
		      <div class="blodetail_writer_wrap clearfix">
			      <div class="inner">
				      <div class="pic" style="background: url(<%= image_url("common/sample_people.png") %>) center center no-repeat;background-size: cover;"></div>
				      <div class="right">
					      <p class="writer">
						      Writer<span>youyou</span>
					      </p>
				      </div>
			      </div>
			      <p class="writer_talk">No ramen, No life !!</p>
		      </div>

		      <div class="blodetail_aside_ranking">
			      <p class="blogdetail_aside_title">Blog ranking</p>
			      <article class="blogdetail_ranking_block">
			        <a href="" class="link clearfix">
				        <%= image_tag("blog/rank_icon01.png", class: "num_pic") %>
				        <div class="pic" style="background: url(<%= image_url("common/sample_pic.jpg") %>) center center no-repeat;background-size: cover;">
				        </div>
				        <h1 class="title"><%= @blog_impression_1.blog_detail.title %></h1>
			        </a>
		        </article>
		        <article class="blogdetail_ranking_block">
			        <a href="" class="link clearfix">
				        <%= image_tag("blog/rank_icon02.png", class: "num_pic") %>
				        <div class="pic" style="background: url(<%= image_url("common/sample_pic.jpg") %>) center center no-repeat;background-size: cover;">
				        </div>
				        <h1 class="title"><%= @blog_impression_2.blog_detail.title %></h1>
			        </a>
		        </article>
			      <article class="blogdetail_ranking_block">
			        <a href="" class="link clearfix">
				        <%= image_tag("blog/rank_icon03.png", class: "num_pic") %>
				        <div class="pic" style="background: url(<%= image_url("common/sample_pic.jpg") %>) center center no-repeat;background-size: cover;">
				        </div>
				        <h1 class="title"><%= @blog_impression_3.blog_detail.title %></h1>
			        </a>
		        </article>
		      </div>

		      <div class="blodetail_aside_ranking">
			      <p class="blogdetail_aside_title">Blog category</p>
			      <select name="category_choose" class="blogdetail_aside_select">
							<% @blog.categories.each do |category| %>
							<option value="<%= category.name %>"><%= category.name %> </option>
							<% end %>
						</select>
				</div>
	      </aside>
      </div>
	  </div>
  </div>
</div>